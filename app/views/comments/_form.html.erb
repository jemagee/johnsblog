<% if comment.errors.any? %>
  <% comment.errors.full_messages.each do |msg| %>
    <%= msg %>
  <% end %>
<% end %>

<%= form_for [article, comment] do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <%= f.label :body, "Comment" %>
  <%= f.text_field :body %>

  <%= f.submit class: "btn btn-warning" %>
<% end %>