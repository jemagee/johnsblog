  <%= form_for([article, article.comments.build], html: {id: "new_comment_form" } ) do |f|  %>
    <div class="form-group">
      <%= f.label :body, "Enter comment Here" %>
      <br />
      <%= f.text_area :body, size: '75x2', class: 'textarea-comment' %>
    </div>
    <div class="form-actions">
      <%= f.submit "Add Comment", class: "btn btn-sm btn-primary" %>
    </div>
  <% end %>